@page
@model BookStore.Pages.Admin.Books.DeleteModel

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Pages/Shared/_Admin.cshtml";
}
<h3 style="text-align:center">Are you sure you want to delete this book?</h3>

<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			Tên Sách
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Book.BookName)
		</dd>
		<dt class="col-sm-2">
			Bìa Sách
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Book.Cover)
		</dd>
		<dt class="col-sm-2">
			Tác Giả
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Book.Author)
		</dd>
		<dt class="col-sm-2">
			Giá Sách
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Book.Price)
		</dd>
		<dt class="col-sm-2">
			Mô Tả
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Book.Description)
		</dd>
		<dt class="col-sm-2">
			Số Lượng
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Book.Quantity)
		</dd>
		<dt class="col-sm-2">
			Ngày Cập Nhật
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Book.UpdateDate)
		</dd>
		<dt class="col-sm-2">
			Nhà Xuất Bản
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Book.Publisher.PublisherName)
		</dd>
		<dt class="col-sm-2">
			Danh Mục
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Book.SubCategory.SubCategoryName)
		</dd>
	</dl>

	<form method="post">
		<input type="hidden" asp-for="Book.BookId" />
		<div class="justify-content-center" style="display:flex; align-items:center; margin-bottom:10px">
			<a class="btn btn-outline-secondary" asp-page="./Index">< Quay lại</a>&nbsp;
			<input type="submit" value="Xoá" class="btn btn-danger" />
		</div>
	</form>
</div>
