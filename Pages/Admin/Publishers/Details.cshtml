@page
@model BookStore.Pages.Admin.Publishers.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Admin.cshtml";
}

<h1 style="text-align:center">Thông Tin NXB</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Nhà Xuất Bản
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.PublisherName)
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Address)
        </dd>
        <dt class="col-sm-2">
            SĐT
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Phone)
        </dd>
    </dl>
</div>
<div class="form-group justify-content-center" style="display:flex; align-items:center; margin-bottom:10px">
    <a class="btn btn-outline-secondary" asp-page="./Index">< Quay lại</a>&nbsp;
    <a class="btn btn-outline-success" asp-page="./Edit" asp-route-id="@Model.Publisher?.PushlisherId">Sửa</a>
</div>
