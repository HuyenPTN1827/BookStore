@page "/Admin/SubCategories"
@model BookStore.Pages.Admin.SubCategories.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Admin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory[0].SubCategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategory[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SubCategory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SubCategoryId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SubCategoryId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SubCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
