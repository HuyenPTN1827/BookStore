@page
@model BookStore.Pages.Admin.Categories.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Admin.cshtml";
}

<h1 style="text-align:center">Thông Tin Danh Mục</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên Danh Mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
</div>
<div class="form-group justify-content-center" style="display:flex; align-items:center; margin-bottom:10px">
    <a class="btn btn-outline-secondary" asp-page="./Index">< Quay lại</a>&nbsp;
    <a class="btn btn-outline-success" asp-page="./Edit" asp-route-id="@Model.Category?.CategoryId">Sửa</a>
</div>
